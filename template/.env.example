# Application
APP_NAME=ArcanaJS
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=arcanajs
DB_USERNAME=root
DB_PASSWORD=

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Redis (Optional - for sessions and queue)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Mail Configuration
MAIL_DRIVER=log
MAIL_FROM_ADDRESS=noreply@arcanajs.com
MAIL_FROM_NAME="${APP_NAME}"
MAIL_REPLY_TO=
MAIL_REPLY_TO_NAME=

# SMTP Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SendGrid
SENDGRID_API_KEY=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_HOST=api.mailgun.net

# AWS SES
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Mail Queue
MAIL_QUEUE_ENABLED=false
MAIL_QUEUE_DRIVER=memory
REDIS_MAIL_DB=1
